{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "noImplicitAny": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules", "./types"],
    "types": ["webpack"],
    "paths": { "*": ["src/*"] }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "build", // Exclude the output directory during the build process
    "webpack.*.js"
  ]
}
